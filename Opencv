#include<vector>
#include <iostream>
#include<string.h>
#include<fstream>
#include"opencv2/libavcodec/avcodec.h"
using namespace std;

string intro_video = "intro_video.mp4";
string main_video = "main_highlights_video.mp4";
string outro_video = "outro_video.mp4";
string combined = "combinedThree.mp4";

int main()
{
    //Name of the mp4 file "combinedThree.mp4" will store intro, main and outro mp4 files
    
    ofstream video_files;
    video_files.open("config.txt");
    
    //a vector to store all the video file names
    vector<string> files;
    files.push_back(intro_video);
    files.push_back(main_video);
    files.push_back(outro_video);

    for (int i = 0; i < files.size(); i++) {
        video_files << "file '" << files[i] << "'\n";
    }
    
    system("ffmpeg");
    //-f concat -i config.txt -c copy combinedThree.mp4
    video_files.close();
    return 0;
}
